<div class="container">
  <div class="row align-items-start">

{{#each albumData}}

  <div class="card col-3">
    <img src="{{this.images.0.url}}" class="card-img-top" alt="{{this.name}}" />
    <div class="card-body">
      <h1 class="card-title">{{this.name}}</h1>
   <button><a href="/tracks/{{this.id}}" class="btn btn-primary">View Tracks</a></button>
    </div>
  </div>
{{/each}}

 </div>
</div>